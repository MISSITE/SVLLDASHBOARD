  <script>
    function login() {
      const iframe = document.getElementById('iframe1');
      const user = iframe.contentWindow.document.getElementById('username').value.trim();
      const pass = iframe.contentWindow.document.getElementById('password').value.trim();

      if (user === 'MIS' && pass === 'MIS@') {
        document.getElementById('iframe1').style.display = 'none';
        const iframe2 = document.getElementById('iframe2');
        iframe2.style.display = 'block';
        iframe2.classList.add('fade-in');
      } else {
        alert('‚ùå Wrong credentials! Please try again.');
      }
    }
  </script>
